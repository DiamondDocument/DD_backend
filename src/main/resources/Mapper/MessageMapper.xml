<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="diamondpick.dd_backend.Dao.MessageDao">
    <resultMap id="MessageResultMap" type="diamondpick.dd_backend.Entity.Message">
        <result column="messageID" property="messageID"/>
        <result column="senderID" property="senderID"/>
        <result column="receiverID" property="receiverID"/>
        <result column="message" property="message"/>
        <result column="status" property="status"/>
        <result column="dateCreated" property="dateCreated"/>
    </resultMap>

    <insert id="sendNewMessage">
        insert into `Message`(`senderID`, `receiverID`, `message`, `status`)
        values (#{senderID}, #{receiverID}, #{message}, #{status})
    </insert>

    <select id="receiveMessageByUserId" resultMap="MessageResultMap">
        select *
        from `Message`
        where `receiverID` = #{userId}
          and `status` = #{status}
    </select>

    <update id="changeMessageStatus">
        update `message`
        set `status` = #{postStatus}
        where `receiverID` = #{userId}
          and `status` = #{preStatus}
    </update>

    <select id="listMessage" resultMap="MessageResultMap">
        select *
        from `Message`
        where `receiverID` = #{userId}
    </select>
</mapper>